<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_button_group"
        android:padding="@dimen/main_padding">

        <Button
            android:id="@+id/buttonYandexConstraint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Макет Яндекс Музыка Constraint"
            android:textAllCaps="false"/>

        <Space
            android:layout_width="@dimen/main_padding"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/buttonYandexLinear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Макет Яндекс Музыка Linear"
            android:textAllCaps="false"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_padding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_button_group"
        android:padding="@dimen/main_padding">

        <Button
            android:id="@+id/buttonTelegramConstraint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Макет Telegram Constraint"
            android:textAllCaps="false"/>

        <Space
            android:layout_width="@dimen/main_padding"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/buttonTelegramLinear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Макет Telegram Linear"
            android:textAllCaps="false"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_padding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_button_group"
        android:padding="@dimen/main_padding">

        <Button
            android:id="@+id/buttonCalcConstraint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Макет калькулятор Constraint"
            android:textAllCaps="false"/>

        <Space
            android:layout_width="@dimen/main_padding"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/buttonCalcLinear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Макет калькулятор \n Linear"
            android:textAllCaps="false"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_padding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_button_group"
        android:padding="@dimen/main_padding">

        <Button
            android:id="@+id/buttonFacebookConstraint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Макет facebook Constraint"
            android:textAllCaps="false"/>

        <Space
            android:layout_width="@dimen/main_padding"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/buttonFacebookLinear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Макет facebook Linear"
            android:textAllCaps="false"/>

    </LinearLayout>

</LinearLayout>