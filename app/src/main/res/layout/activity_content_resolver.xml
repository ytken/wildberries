<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".content.ContentResolverActivity">

    <include android:id="@+id/custom_toolbar_content_resolver"
        layout="@layout/toolbar_custom"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/main_padding"
        android:weightSum="20">

        <Button
            android:id="@+id/buttonImportResumeFromHH"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginBottom="@dimen/main_padding"
            android:text="Импорт резюме из hh.ru"
            android:textAllCaps="false"/>

        <LinearLayout
            android:id="@+id/linearLayoutImportedResume"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:divider="@drawable/list_divider"
            android:showDividers="middle"
            android:orientation="vertical"
            android:clipToPadding="false"/>

        <Button
            android:id="@+id/buttonClearImportedList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="Очистить список"/>

    </LinearLayout>



</LinearLayout>